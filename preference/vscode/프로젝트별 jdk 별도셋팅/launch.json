{
    // IntelliSense 사용을 위한 기본 정보 제공 주석
    // 속성에 마우스를 올리면 설명이 표시됩니다.
    // 자세한 내용은 링크 참고: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            // Java 애플리케이션 실행 구성
            "type": "java", // Java 런타임 타입
            "name": "BatchProcessingApplication", // 실행 구성 이름 (VSCode에서 표시됨)
            "request": "launch", // 실행 방식 (launch: 새 프로세스로 시작)
            "mainClass": "com.example.batchprocessing.BatchProcessingApplication", // main() 메서드가 포함된 클래스
            "projectName": "batch-processing-complete" // Maven 또는 Gradle 프로젝트 이름
        },
        {
            // 동일한 main 클래스를 사용하는 다른 프로젝트 구성
            "type": "java",
            "name": "BatchProcessingApplication",
            "request": "launch",
            "mainClass": "com.example.batchprocessing.BatchProcessingApplication",
            "projectName": "batch-processing-initial"
        },
        {
            // 현재 열려 있는 파일을 실행하는 구성 (단일 파일 실행용)
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}" // 현재 열려 있는 파일을 main 클래스로 사용
        }
    ]
}